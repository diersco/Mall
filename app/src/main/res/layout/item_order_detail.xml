<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_82"
        android:layout_height="@dimen/dp_82" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="汾酒 白酒 黄钙波汾 清香型 高度白酒 53度 4..."
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="规格：1件（475ml*6瓶）"
                    android:textColor="@color/default_font_gray_909"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥169.00"
                    android:textColor="@color/default_font_gray_666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="x3"
                    android:textColor="@color/default_font_gray_666"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="right">


            <TextView
                android:id="@+id/tv_buy_again"
                android:layout_width="@dimen/dp_67"
                android:layout_height="@dimen/dp_26"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/shape_text_line_order_gary"
                android:gravity="center"
                android:text="再次购买"
                android:textColor="@color/default_font_gray_666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_after_sales"
                android:layout_width="@dimen/dp_67"
                android:layout_height="@dimen/dp_26"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/shape_text_line_order_gary"
                android:gravity="center"
                android:text="申请售后"
                android:textColor="@color/default_font_gray_666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_evaluate"
                android:layout_width="@dimen/dp_67"
                android:layout_height="@dimen/dp_26"
                android:layout_marginStart="@dimen/dp_12"
                android:background="@drawable/shape_text_line_gary"
                android:gravity="center"
                android:text="待评价"
                android:textColor="@color/default_font_gray_666"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>