<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/ic_address_unselected" />


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_93"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_15"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="菁纯赋活原生水"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="120ml/瓶"
            android:textColor="@color/default_font_gray_999" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_special_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时特惠"
            android:textColor="#EE4F3E"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="￥280"
                android:textColor="@color/default_font_gray_333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/shape_text_format_gary">


                <TextView
                    android:id="@+id/tv_reduce_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="-"
                    android:textColor="#707070"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/default_font_gray_ccc" />

                <TextView
                    android:id="@+id/tv_buy_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="1"
                    android:textColor="#707070"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/default_font_gray_ccc" />

                <TextView
                    android:id="@+id/tv_add_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="+"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>