<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:background="@drawable/shape_round_white_top_eight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_98"
                android:src="@color/default_font_gray_999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_12"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="菁纯赋活原生水"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="库存：180"
                    android:textColor="@color/default_font_gray_666"
                    android:textSize="@dimen/sp_12" />


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="￥120"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_17" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#D7D7D7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="规格"
                android:textColor="@color/default_font_gray_333"
                android:textSize="@dimen/sp_13" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tl_format_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                zhy:max_select="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="规格"
                android:textColor="@color/default_font_gray_333"
                android:textSize="@dimen/sp_13" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tl_format_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                zhy:max_select="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_15"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="购买数量"
                android:textColor="@color/default_font_gray_333"
                android:textSize="@dimen/sp_13" />


            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_24"
                android:background="@drawable/shape_text_format_gary">


                <TextView
                    android:id="@+id/tv_reduce_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="-"
                    android:textColor="#707070"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/default_font_gray_ccc" />

                <TextView
                    android:id="@+id/tv_buy_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="1"
                    android:textColor="#707070"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/default_font_gray_ccc" />

                <TextView
                    android:id="@+id/tv_add_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="+"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/shape_universal_btn"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>