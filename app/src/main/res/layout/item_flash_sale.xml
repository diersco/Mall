<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_107"
        android:layout_height="@dimen/dp_91"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="汾酒 白酒 黄钙波汾 清香型 高度白酒 53度 4..."
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="规格：1件（475ml*6瓶）"
                    android:textColor="@color/default_font_gray_909"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥169.00"
                    android:textColor="@color/default_font_purple"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/tv_special_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_6"
                    android:text="￥169.00元"
                    android:textColor="@color/default_font_gray_666"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已抢60%"
                    android:textColor="@color/default_font_gray_666"
                    android:textSize="@dimen/sp_11" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/dp_106"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_2"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progressbar" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_buy_now"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_31"
                android:background="@drawable/shape_round_order_purple"
                android:gravity="center"
                android:text="立即抢购"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>