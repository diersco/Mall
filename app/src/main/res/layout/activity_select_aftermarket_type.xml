<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".activity.SelectAftermarketTypeActivity">


    <include layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/layout_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_round_white_four"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_12">


        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textColor="@color/default_font_gray_333"
                android:textSize="@dimen/sp_12"
                tools:text="【当季现货】2021年春季限定白酒种类…" />

            <TextView
                android:id="@+id/tv_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/default_font_gray_909"
                android:textSize="@dimen/sp_11"
                tools:text="种类：500ml，醇香新品" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_16"
                    tools:text="0.01" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/default_font_gray_666"
                    android:textSize="@dimen/sp_12"
                    tools:text="0.01" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_refund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_19"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_19"
            android:text="退款"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_14"
            app:drawableRightCompat="@drawable/ic_front_right"
            app:drawableStartCompat="@drawable/ic_refund" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_return_the_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_19"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_19"
            android:text="退货"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_14"
            app:drawableRightCompat="@drawable/ic_front_right"
            app:drawableStartCompat="@drawable/ic_return_the_goods" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_refund_and_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_19"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_19"
            android:text="退货退款"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_14"
            app:drawableRightCompat="@drawable/ic_front_right"
            app:drawableStartCompat="@drawable/ic_refund_and_goods" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_after_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_19"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_19"
            android:text="售后"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_14"
            app:drawableRightCompat="@drawable/ic_front_right"
            app:drawableStartCompat="@drawable/ic_after_sales" />

    </LinearLayout>

</LinearLayout>