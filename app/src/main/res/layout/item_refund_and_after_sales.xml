<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2021-12-06"
            android:textColor="@color/default_font_gray_999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货"
            android:textColor="@color/default_font_gray_999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@color/default_font_gray_333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="汾酒 白酒 黄钙波汾 清香型 高度白酒 53度 4..."
                android:textColor="@color/default_font_gray_333"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="规格："
                    android:textColor="@color/default_font_gray_999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="1件（475ml*6瓶）"
                    android:textColor="@color/default_font_gray_999"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="退款："
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="￥36.90"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:background="@drawable/shape_rounded_corners_item_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="退款成功"
            android:textColor="@color/default_font_gray_333"
            android:layout_marginStart="@dimen/dp_15"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/dp_12"
            android:text="退款成功￥36.90元"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="right">


        <TextView
            android:id="@+id/tv_btn_gary_left"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_line_gary"
            android:gravity="center"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="删除记录"
            android:textColor="@color/default_font_gray_666"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_btn_gary_right"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/shape_text_line_gary"
            android:gravity="center"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="售后评价"
            android:textColor="@color/default_font_gray_666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_btn_purple"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/shape_text_line_purple"
            android:gravity="center"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="查看详情"
            android:textColor="@color/default_font_purple"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>