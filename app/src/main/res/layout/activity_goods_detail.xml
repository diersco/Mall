<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GoodsDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F4F4F4">

            <RelativeLayout
                android:id="@+id/layout_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_360"
                android:background="@color/default_font_gray_666">


                <com.youth.banner.Banner
                    android:id="@+id/banner_class"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_330"
                android:background="@drawable/shape_universal_bg"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="￥280"
                        android:textColor="@color/default_font_purple"
                        android:textSize="@dimen/sp_19" />


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/ic_goods_un_collect" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_2"
                        android:padding="@dimen/dp_4"
                        android:src="@drawable/ic_goods_share" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="娇兰Guerlain.第三代帝皇蜂姿黄金修护复原蜜精华液 提拉字样精华紧致补水保湿 50ml"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_12">


                    <TextView
                        android:id="@+id/tv_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="销量：800+"
                        android:textColor="@color/default_font_gray_666"
                        android:textSize="@dimen/sp_12" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_inventory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="库存：800+"
                        android:textColor="@color/default_font_gray_666"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D7D7D7" />

                <TextView
                    android:id="@+id/tv_mine_contact_customer_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_12"
                    android:text="选择规格"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_12"
                    app:drawableRightCompat="@drawable/ic_front_right" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D7D7D7" />


                <TextView
                    android:id="@+id/tv_evaluation_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="商品评价（0）"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_is_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:gravity="center"
                    android:text="暂无评价" />

                <LinearLayout
                    android:id="@+id/layout_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_content"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_15"
                android:paddingTop="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_40">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:text="商品详情"
                    android:textColor="@color/default_font_gray_333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:drawableTop="@drawable/ic_goods_cart"
            android:drawablePadding="@dimen/dp_4"
            android:includeFontPadding="false"
            android:text="购物车"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_10" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_add_to_cart"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/shape_text_line_purple"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/default_font_purple"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_buy_now"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_35"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/shape_txt_rounded_corners_purple_eight"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</RelativeLayout>