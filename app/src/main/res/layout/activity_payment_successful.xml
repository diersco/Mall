<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.PaymentSuccessfulActivity">

    <include layout="@layout/layout_title" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_65"
        android:src="@drawable/ic_payment_successful" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_23"
        android:text="订单支付成功！"
        android:textColor="@color/default_font_gray_333"
        android:textSize="@dimen/sp_17"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="您可在“我-我的订单“中查看详情"
        android:textColor="@color/default_font_gray_666"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_66"
        android:background="@drawable/shape_txt_payment_successful_finish"
        android:paddingLeft="@dimen/dp_36"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_36"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/finish"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</LinearLayout>