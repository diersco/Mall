<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_12">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dp_94"
        android:layout_height="@dimen/dp_77" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="原创精美枕头 设计师款"
            android:textColor="@color/default_font_gray_333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_is_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:fontFamily="sans-serif-medium"
            android:text="包邮"
            android:textColor="@color/default_font_gray_999"
            android:textSize="@dimen/sp_12" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200分"
                android:textColor="@color/default_font_purple"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sales_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量20+"
                android:textColor="@color/default_font_gray_999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>